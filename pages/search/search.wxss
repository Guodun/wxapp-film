.search{
    width:100%;
    height:160rpx;
    display:block;
    padding:15px;
    padding-right:30rpx;
    box-sizing:border-box;
    border-bottom:1rpx solid #eee;
}
.searchBorder{
    display: flex;
    flex-direction: row;
    justify-content: center;
    height:80rpx;
    border:1px solid #eee;
    border-radius:4px;
    line-height:80rpx
}
.tapButton{
    flex: 1;
    text-align: center;
    border-right:1rpx solid #eee;
}
.searchInput{
    flex: 4;
    height: 100%;
}
.searchButton{
    flex: 1;
    text-align: center;
    border-left: 1rpx solid #eee;
}
.placeholder{
    font-family: "微软雅黑";
    font-size: 28rpx;
    line-height: 80rpx;
    padding: 5rpx;
}
.hotTag{
    padding: 30rpx;
}
.searchView{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
}
.searchTitle{
    margin-bottom: 15rpx;
}
.hotSearch{
    margin: 12rpx;
    border: 1rpx solid #eee;
    border-radius: 13rpx;
    height:52rpx;
    padding:4rpx 10rpx;
    text-align:center;
    display:block;
    line-height:52rpx;
}
.hotSearchs{
    margin-bottom:40rpx;
}