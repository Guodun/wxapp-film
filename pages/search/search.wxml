<view class="contain">
    <form class="search" bindsubmit="formSubmit">
        <view class="searchBorder">
            <view class="tapButton">默认</view>
            <input class="searchInput" placeholder-style="line-height: 80rpx " placeholder="请输入电影名字" name="input"/>
            <button class="searchButton" formType="submit" bindtap="toSearchReasultView">搜索</button>
        </view>
    </form>
    <view class="hotTag">
        <view class="hotSearchs">
            <view class="searchTitle">热门搜索</view>
            <view class="searchView" >
                <block wx:for="{{hotSearch}}">
                    <view class="hotSearch">{{item}}</view>
                </block>
            </view>
        </view>
        <view class="hotSearchs">
            <view class="searchTitle">热门标签</view>
            <view class="searchView" >
                <block wx:for="{{hotSearch}}">
                    <view class="hotSearch">{{item}}</view>
                </block>
            </view>
        </view>
    </view>
</view>